@model IEnumerable<IEPAuctionSale.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoTokens)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceOfPackage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOrdered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusIndicatior)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoTokens)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceOfPackage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOrdered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusIndicatior)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
